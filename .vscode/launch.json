//.vscode/launch.json
//这个文件是我们代码的启动配置文件
{
    // 使用 IntelliSense 了解相关属性。
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc - 生成和调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            //可执行文件的路径
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            //调试会话开始前执行的任务。这个值必须跟.vscode/tasks.json的label值相等
            "preLaunchTask": "C/C++: gcc build active file"
        }
    ]
}